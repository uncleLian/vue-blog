@import './index';

* {
    box-sizing: border-box;
}
html, body {
    width: 100%;
    height: 100%;
    min-width: 1024px;
    min-height: 100%;
    background: #f4f5f6;
}
body {
    font-family: Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, SimSun, sans-serif;
    font-weight: 400;
    font-size: 14px;
    color: #333;
    overflow-x: hidden;
    overflow-y: auto;
}
a {
    color: $appColor;
    text-decoration: none;
    outline: none;
}
// introduce;
.app-introduce {
    width: fit-content;
    font-weight: 500;
    text-align: justify;
    line-height: 1.6em;
    padding: 1em;
    margin-bottom: 1.5em;
    background: rgba($appColor, 0.1);
    border-radius: 3px;
    a {
        margin-left: 5px;
    }
    p {
        margin: 1em 0 0 0;
    }
}
// hover
.ishover {
    transition: background 0.3s;
    &:hover {
        background: rgba(0, 0, 0, 0.025);
    }
}
// table
.tablePage-container {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 20px;
    .left-item {
        margin-right: 10px;
        &:last-child {
            margin-right: 0;
        }
    }
}
// drag style
.sortable-chosen {
    background-color: #f0f9eb !important;
}
.sortable-ghost {
    background-color: rgba($appColorRGB, 0.5) !important;
}
